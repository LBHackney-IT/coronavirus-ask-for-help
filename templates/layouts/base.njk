{% extends "template.njk" %}

{% block head %}

  {% if GTM_CODE %}
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id={{ GTM_CODE }}"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '{{ GTM_CODE }}');
  </script>
  {% endif %}

   <link rel="stylesheet" type="text/css" href="public/app.css">
{% endblock %}


{% block pageTitle %}Ask for help if you’re affected by coronavirus | Hackney Council{% endblock %}

{% block header %}
  {{lbhHeader({
    isHome: false,
    serviceName: "Ask for help if you’re affected by coronavirus"
  })}}
{% endblock %}

{% block beforeContent %}
<div id="loader_overlay" class="">
  <div id="loader_spinner"></div>
</div>
{% endblock %}

{% block bodyEnd %}
  <script src="public/main.js?v=1.1"></script>
{% endblock %}